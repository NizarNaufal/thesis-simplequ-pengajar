<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="230dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardMaxElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tvPopuptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/nunito_sans"
                android:src="@drawable/ic_trash" />

            <TextView
                android:id="@+id/tvPopupDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:lineHeight="@dimen/_15sdp"
                android:text="Apakah Anda yakin ingin menghapus data pengajar ini ?"
                android:textColor="@color/colorGreyScale100"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/tvBack"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/bg_radius_white"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_small" />

                <Button
                    android:id="@+id/tvOk"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/bg_radius_green"
                    android:backgroundTint="@color/statusRed"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Ya, Hapus"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>