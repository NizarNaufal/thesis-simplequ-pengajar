<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FAFAFA">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarVerification"
        style="@style/ActionBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Tambah Pengajar"
        app:titleMarginStart="@dimen/_12sdp"
        app:navigationIcon="@drawable/ic_actionbar_arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnVerifyConfirm"
        app:layout_constraintTop_toBottomOf="@+id/toolbarVerification">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tvInformationAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center"
            android:text="Informasi Akun"
            android:textColor="@color/colorGreyScale100"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/vLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:background="@color/colorBlack5"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInformationAccount" />
        <TextView
            android:id="@+id/tvNomorInduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center"
            android:text="Nomor Induk Pengajar"
            android:textColor="@color/colorGreyScale100"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vLine" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlNomorInduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/tvNomorInduk"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nomor Induk Pengajar"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="false"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDarkGray2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvNomorTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center"
            android:text="Nomor Telepon Pengajar"
            android:textColor="@color/colorGreyScale100"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tlNomorInduk" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlNomorTelepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvNomorTelepon"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNomorTelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nomor Telepon Pengajar"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="false"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDarkGray2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center"
            android:text="Email"
            android:textColor="@color/colorGreyScale100"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tlNomorTelepon" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan email"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="false"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDarkGray2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center"
            android:text="Password"
            android:textColor="@color/colorGreyScale100"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tlEmail" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false"
            android:layout_marginEnd="@dimen/_10sdp"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan password"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="false"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDarkGray2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSearchPengajar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/clSearch">
                <TextView
                    android:id="@+id/tvInformationPengajar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Informasi Pengajar"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:id="@+id/vLinePengajar"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:background="@color/colorBlack5"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvInformationPengajar" />
                <TextView
                    android:id="@+id/tvNamaPengajar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Nama Pengajar"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vLinePengajar" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlNamaPengajar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvNamaPengajar"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNamaPengajar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Nama Pengajar"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:selectAllOnFocus="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvNomorIndukKependudukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Nomor Induk Kependudukan ( NIK )"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlNamaPengajar" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlNomorIndukKependudukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvNomorIndukKependudukan"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNIK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Nomor Induk Kependudukan ( NIK )"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:selectAllOnFocus="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvTempatLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Tempat Lahir"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlNomorIndukKependudukan" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlTempatLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTempatLahir"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTempatLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Tempat Lahir"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:selectAllOnFocus="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvTanggalLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Tanggal Lahir"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlTempatLahir" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlTanggalLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTanggalLahir"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTanggalLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Tanggal Lahir"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:selectAllOnFocus="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvMetodePembelajaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Metode Pembelajaran"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlTanggalLahir" />
                <com.skydoves.powerspinner.PowerSpinnerView
                    android:id="@+id/spinner"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center|left"
                    app:spinner_arrow_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:spinner_arrow_padding="8dp"
                    app:spinner_divider_color="@color/black"
                    app:spinner_divider_show="true"
                    app:spinner_divider_size="0.4dp"
                    app:spinner_item_array="@array/questions_two"
                    app:spinner_item_height="46dp"
                    app:spinner_popup_animation="dropdown"
                    app:spinner_popup_background="@drawable/bg_round_spinner"
                    app:spinner_popup_elevation="14dp"
                    android:hint="Metode Pembelajaran"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvMetodePembelajaran"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/tvAsalUniversitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Asal Universitas atau Sekolah"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlAsalUniversitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvAsalUniversitas"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAsalUniversitas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan asal universitas/sekolah"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:selectAllOnFocus="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvProgramStudi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Program Studi"
                    android:textColor="@color/colorGreyScale100"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlAsalUniversitas" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlProgramStudi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:hintEnabled="false"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvProgramStudi"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProgramStudi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Program Studi"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:selectAllOnFocus="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnVerifyConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/btn_enabled"
        android:text="Tambah Pengajar"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
